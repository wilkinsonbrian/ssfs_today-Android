<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bark_1280x1920"
        android:contentDescription="@string/background"/>

    <Button
        android:id="@+id/lunch_button"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:onClick="goToLunchActivity"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/today_button"
        tools:layout_editor_absoluteX="112dp" />

    <Button
        android:id="@+id/athletics_button"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/athletics_button"
        android:onClick="goToAthleticsActivity"
        app:layout_constraintStart_toStartOf="@id/lunch_button"
        app:layout_constraintBottom_toTopOf="@id/lunch_button"/>

    <Button
        android:id="@+id/bell_schedule_button"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:layout_marginBottom="24dp"
        android:onClick="goToSchedule"
        android:background="@drawable/bell_schedule_button"
        app:layout_constraintStart_toStartOf="@id/lunch_button"
        app:layout_constraintBottom_toTopOf="@id/athletics_button"/>

    <Button
        android:id="@+id/beestro_button"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/beestro_button"
        android:onClick="goToBeestroActivity"
        app:layout_constraintStart_toStartOf="@id/lunch_button"
        app:layout_constraintTop_toBottomOf="@id/lunch_button" />

    <Button
        android:id="@+id/wildezine_button"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:layout_marginTop="24dp"
        android:onClick="goToWildezine"
        android:background="@drawable/wildezine_button"
        app:layout_constraintStart_toStartOf="@id/lunch_button"
        app:layout_constraintTop_toBottomOf="@id/beestro_button" />



</android.support.constraint.ConstraintLayout>
